{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    // Disallow all semicolons on line endings
    "semi": ["error", "never"],
    // Allow console log messages
    "no-console": "off",
    // Disallow dangling commas
    "comma-dangle": ["error", "never"]
  }
}