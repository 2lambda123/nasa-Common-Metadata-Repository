FROM eclipse-temurin:17

COPY ./target/cmr-dev-system-0.1.0-SNAPSHOT-standalone.jar /app/cmr-standalone.jar

COPY ./target/cmr-dev-system-0.1.0-SNAPSHOT-standalone.jar cmr-standalone-copy.jar
RUN jar xf cmr-standalone-copy.jar
COPY cmr-standalone-copy /app/cmr

RUN echo 'Inside temp folder'
RUN ls -a /app/cmr
RUN ls -R /app/cmr | grep ":$" | sed -e 's/:$//' -e 's/[^-][^\/]*\//--/g' -e 's/^/   /' -e 's/-/|/'

WORKDIR /app